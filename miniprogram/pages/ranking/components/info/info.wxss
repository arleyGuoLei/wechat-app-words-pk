.info {
  display: flex;
  align-items: center;
  height: 108rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 0 32rpx;
}

.info-num {
  width: 87rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-num__img {
  width: 33rpx;
  height: 40rpx;
}

.info-num__text {
  font-size: 33rpx;
  font-weight: 400;
  color:rgba(204, 204, 204, 1);
}

.avartar {
  width: 60rpx;
  height: 60rpx;
  margin-left: 16rpx;
  border-radius: 30rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  flex: 1;
  margin-left: 16rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.tag {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 24rpx;
  background: rgba(193, 234, 251, .8);
  box-sizing: border-box;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.score {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
}

.score-img {
  width: 33rpx;
  height: 31rpx;
}

.score-text {
  font-size:33rpx;
  font-weight:600;
  color:rgba(254,231,1,1);
  margin-left: 16rpx;
}