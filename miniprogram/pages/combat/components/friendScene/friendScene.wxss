page {
  overflow: hidden;
}

.users {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx 0 36rpx 0;
  height: 456rpx;
  margin-top: 148rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
}

.userinfo-avatar {
  width: 165rpx;
  height: 165rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 38rpx;
  font-size: 18px;
  color: rgba(255, 255, 255, 1);
  font-weight: 600;
}

.userinfo-grade,
.userinfo-winRate {
  margin-top: 28rpx;
  font-size: 15px;
  color: rgba(153, 153, 153, 1);
  font-weight: 500;
}

.userinfo-winRate {
  margin-top: 24rpx;
}

.button-container {
  margin-top: 72rpx;
}

.button {
  width: 480rpx !important;
  height: 80rpx;
  background: rgba(126, 206, 247, 1);
  border-radius: 64rpx;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
}

.pk-icon {
  display: block;
  width: 350rpx;
  height: 160rpx;
  margin: 64rpx auto 0;
}