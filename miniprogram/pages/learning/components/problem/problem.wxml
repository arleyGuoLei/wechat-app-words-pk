<view class="problem">
  <text class="problem-word">{{wordItem.word}}</text>
  <text hidden="{{!wordItem.usphone}}" class="problem-usphone">/{{wordItem.usphone}}/</text>

  <view class="problem-options">

    <block wx:for="{{wordItem.options}}" wx:key="index" wx:for-index="index" wx:for-item="option">
      <view catchtap="onSelectOption" data-index="{{index}}" 
      class="option touch-s" >
        <text class="option-text">{{option}}</text>

        <!-- option-wrong option-correct -->
        <!-- <image class="option-icon" src="./../../../../images/combat-g.png" /> -->
        <!-- <image class="option-icon" src="./../../../../images/combat-x.png" /> -->
      </view>
    </block>

  </view>
</view>